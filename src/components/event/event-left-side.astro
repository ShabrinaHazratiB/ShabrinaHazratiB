---
import "bootstrap/dist/css/bootstrap.min.css";
import 'bootstrap-icons/font/bootstrap-icons.css';
import { slide } from "astro:transitions";
import '../../styles/event/event-left-side.css';
import Eventrightside from "./event-right-side.astro";

// Import JSON data
import Dataeventleftside from "../../data/event/event-left-side.json";

---

<!-- DESCRIPTION SECTION -->
<section class="desc">
  <div class="container my-5">
    <div class="row">
      <!-- LEFT COLUMN SECTION -->
      <div class="col-md-8">
        {Dataeventleftside.map((item)=>(
        <div class="event-title mb-3">
          {item.title}
        </div>

        <!-- Event Description -->
        <div class="event-info">
          <div>
            <strong>{item.time}</strong>
            <p></p>
            <i class="bi bi-calendar3 me-2"></i> {item["hari-tgl"]} <br>
            <i class="bi bi-clock me-2"></i> {item.jam} <br>
            <a href="#" class="btn btn-link p-0" style="color: gold;">+ Add to Calendar</a>
          </div>

          <div class="border-bottom" style="margin-top: 35px; margin-bottom: 40px;"></div>
            
          <div class="lokasi" style="margin-top: 20px;">
            <strong>Lokasi</strong> <br>
            <i class="bi bi-geo-alt me-2"></i>
            <span>{item.location}</span>
          </div>

          <div class="mt-4 map-container">
            <iframe width="100%" height="100%" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3952.853926227532!2d110.36162817368304!3d-7.80528449221501!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e7a5796db06c7ef%3A0x395271cf052b276c!2sKeraton%20Ngayogyakarta%20Hadiningrat!5e0!3m2!1sid!2sid!4v1738898172536!5m2!1sid!2sid" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
          </div>

          <div class="border-bottom" style="margin-top: 20px;"></div>
        </div>

        <!-- Sponsor -->
        <div class="container mt-3">
          <div class="row align-items-start">
            <h5><strong>Sponsored by:</strong></h5>
            <div class="col-auto">
              <img src={item["img-src"]} alt="City Youth Movement" class="me-3" style="width: 65px; height: auto;">
            </div>
            <div class="col">
              <h5>{item.sponsor}</h5>
              <div class="d-flex">
                <a href="#" class="btn btn-dark btn-custom me-3">Hubungi Kami</a>
                <a href="#" class="btn btn-dark btn-custom">Selengkapnya<i class="bi bi-arrow-right ms-2"></i></a>
              </div>
            </div>
          </div>
        </div>

        <div class="border-bottom" style="margin-top: 20px;"></div>

        <!-- Description -->
        <div class="container my-4">
          <div class="row align-items-start">
            <div class="col-lg-12">
              <h5><strong>Description</strong></h5>
              <p style="text-align: justify;">{item.description}</p>

              <p style="text-align: justify;">Contrary to popular belief, Lorem Ipsum is not simply random text.
                It has roots in a piece of classical Latin literature from 45 BC, making it over 2000 years old.</p>
            </div>
          </div>
        </div>
      ))}
      </div>
    <Eventrightside/>
    </div>
  </div>
</section>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js">
    import "bootstrap/dist/js/bootstrap.bundle.min.js";
</script>