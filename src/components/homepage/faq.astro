</script>
<script> 
  document.addEventListener("DOMContentLoaded", function () {
    const faqItems = document.querySelectorAll(".faq-item");

    faqItems.forEach((item) => {
      const button = item.querySelector("button");
      const iconMinus = item.querySelector(".minus-icon");
      const iconPlus = item.querySelector(".plus-icon");
      const collapse = item.querySelector(".collapse");

      // Initialize icons based on current state
      function updateIcons() {
        if (collapse.classList.contains("show")) {
          iconMinus.style.display = "block";
          iconPlus.style.display = "none";
        } else {
          iconMinus.style.display = "none";
          iconPlus.style.display = "block";
        }
      }

      // Attach event listener for collapse toggle
      collapse.addEventListener("shown.bs.collapse", updateIcons);
      collapse.addEventListener("hidden.bs.collapse", updateIcons);

      // Set initial state
      updateIcons();
    });
  });</script>
